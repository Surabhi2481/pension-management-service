    </div>*@
@if (ViewBag.invalid != null)
{
    <script type="text/javascript">

        window.onload = function () {
            alert("@ViewBag.invalid");
        }
    </script>
}
@if (ViewBag.loginerror != null)
{
    <script type="text/javascript">

        window.onload = function () {
            alert("@ViewBag.loginerror");
        }
    </script>
}
