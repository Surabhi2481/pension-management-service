@model Pension_Management_Portal.Models.PensionerInput

@{
    ViewData["Title"] = "PensionerValues";
}

<h5> Please give the details of the pensioner</h5>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PensionerValues">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pan" class="control-label"></label>
                <input asp-for="Pan" class="form-control" />
                <span asp-validation-for="Pan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AadharNumber" class="control-label"></label>
                <input asp-for="AadharNumber" class="form-control" />
                <span asp-validation-for="AadharNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PensionType" class="control-label"></label><br />
                
                <div>
                    @Html.DropDownList("PensionType",
                  new SelectList(Enum.GetValues(typeof(Pension_Management_Portal.Models.PensionType))),
                  "Select Type", new { @class = "form-control" })

                </div>
            </div>


          

                <div class="form-group">
                    <input type="submit" value="Get Pension Amount" class="btn btn-success" />
                </div>
        </form>
    </div>
</div>

